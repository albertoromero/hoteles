{% extends _panel %}
{% block content %}
<div class="col-lg-12">
    <div class="portlet portlet-default">
        <div class="portlet-heading">
            <div class="portlet-title">
                <h4>Nuevo Hotel</h4>
            </div>
            <div class="clearfix"></div>
        </div>
        <div class="portlet-body">
            <form accept-charset="UTF-8" role="form" method="post">
                <div class="form-group">
                <label>Nombre</label>
                    <input name="name" type="text" class="form-control" placeholder="Nombre" value="{{ hotel.name }}">
                </div>
                <div class="form-group">
                    <label>Descripcion</label>
                    <textarea class="form-control" name="description" placeholder="Descripcion">{{ hotel.description }}</textarea>
                </div>
                <div class="form-group">
                    <label>Dirección</label>
                    <input name="address" type="text" class="form-control" placeholder="Dirección" value="{{ hotel.address }}">
                </div>
                <div class="row">
                    <div class="form-group">
                        <div class="col-lg-6">
                            <label>Fecha de Check-in</label>
                            <input type="date" name="checkin" class="form-control" value="{{ hotel.checkin }}">
                        </div>
                        <div class="col-lg-6">
                            <label>Fecha de Check-out</label>
                            <input type="date" name="checkout" class="form-control" value="{{ hotel.checkout }}">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group">
                        <div class="clearfix"></div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group">
                        <div class="col-lg-12">
                            <button type="submit" class="btn btn-labeled btn-green">
                                <span class="btn-label"><i class="fa fa-check"></i></span>Guardar
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}