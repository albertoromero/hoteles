{% extends _panel %}
{% block content %}
<div class="col-lg-12">
    <div class="portlet portlet-default">
        <div class="portlet-heading">
            <div class="portlet-title">
                <h4>Hoteles</h4>
            </div>
            <div class="clearfix"></div>
        </div>
        <div class="portlet-body">
            <div class="row">
                <div class="portlet-body">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Nombre</th>
                                    <th>Check-in</th>
                                    <th>Check-out</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for hotel in hotels %}
                                <tr>
                                    <td>{{ hotel.id }}</td>
                                    <td>{{ hotel.name }}</td>
                                    <td>{{ hotel.checkin }}</td>
                                    <td>{{ hotel.checkout }}</td>
                                    <td>
                                        <a href="{{ site_url('hotels/add_2/'~hotel.id) }}" title="Habitaciones">
                                            <button class="btn btn-default add-on" type="button"><i class="fa fa-home"></i></button>
                                        </a>
                                        <a href="{{ site_url('hotels/edit/'~hotel.id) }}" title="Editar">
                                            <button class="btn btn-info add-on" type="button"><i class="fa fa-edit"></i></button>
                                        </a>
                                        <a href="{{ site_url('hotels/delete/'~hotel.id) }}" title="Eliminar">
                                            <button class="btn btn-red add-on" type="button"><i class="fa fa-trash-o"></i></button>
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}