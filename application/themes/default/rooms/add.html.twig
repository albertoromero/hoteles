{% extends _panel %}
{% block content %}
<div class="col-lg-12">
    <div class="portlet portlet-default">
        <div class="portlet-heading">
            <div class="portlet-title">
                <h4>{{ hotel.name }}</h4>
            </div>
            <div class="clearfix"></div>
        </div>
        <div class="portlet-body">
            <form accept-charset="UTF-8" role="form" method="post">
                <div class="form-group">
                <label>Nombre</label>
                    <input name="name" type="text" class="form-control" placeholder="Nombre">
                </div>
                <div class="form-group">
                    <label>Descripci√≥n</label>
                    <textarea class="form-control" name="description" placeholder="Descripcion"></textarea>
                </div>
                <div class="row">
                    <div class="form-group">
                        <div class="clearfix"></div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group">
                        <div class="col-lg-12">
                            <button type="submit" class="btn btn-labeled btn-green">
                                <span class="btn-label"><i class="fa fa-check"></i></span>Guardar
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<div class="col-lg-12">
    <div class="portlet portlet-default">
        <div class="portlet-heading">
            <div class="portlet-title">
                <h4>Habitaciones</h4>
            </div>
            <div class="portlet-widgets">
                <a data-toggle="collapse" data-parent="#accordion" href="#rooms"><i class="fa fa-chevron-down"></i></a>
            </div>
            <div class="clearfix"></div>
        </div>
        <div id="rooms" class="panel-collapse collapse">
            <div class="portlet-body">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Nombre</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for room in rooms %}
                            <tr>
                                <td>{{ room.id }}</td>
                                <td>{{ room.name }}</td>
                                <td>
                                    <a href="{{ site_url('rooms/conditions/'~room.id) }}" title="Condiciones">
                                        <button class="btn btn-orange add-on" type="button"><i class="fa fa-glass"></i></button>
                                    </a>
                                    <a href="{{ site_url('rooms/images/'~room.id) }}" title="Fotos">
                                        <button class="btn btn-default add-on" type="button"><i class="fa fa-photo"></i></button>
                                    </a>
                                    <a href="{{ site_url('rooms/edit/'~room.id) }}" title="Editar">
                                        <button class="btn btn-info add-on" type="button"><i class="fa fa-edit"></i></button>
                                    </a>
                                    <a href="{{ site_url('rooms/delete/'~room.id) }}" title="Eliminar">
                                        <button class="btn btn-red add-on" type="button"><i class="fa fa-trash-o"></i></button>
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}