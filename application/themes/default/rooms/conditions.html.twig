{% extends _panel %}
{% block content %}
<div class="col-lg-12">
    <div class="portlet portlet-default">
        <div class="portlet-heading">
            <div class="portlet-title">
                <h4>{{ room.name }}</h4>
            </div>
            <div class="clearfix"></div>
        </div>
        <div class="portlet-body">
            <form accept-charset="UTF-8" role="form" method="post">
                <div class="form-group">
                    <label>Descripci칩n</label>
                    <textarea class="form-control" name="description" placeholder="Descripcion"></textarea>
                </div>
                <div class="form-group">
                    <label>Extra</label>
                    <textarea class="form-control" name="extra" placeholder="Descripcion"></textarea>
                </div>
                <div class="row">
                    <div class="form-group">
                    <div class="col-lg-4">
                        <label>M치x. Personas</label>
                        <select class="form-control" name="maxperson">
                            <option value=0>(Seleccionar)</option>
                            <option value=1>1</option>
                            <option value=2>2</option>
                            <option value=3>3</option>
                            <option value=4>4</option>
                            <option value=5>M치s de 4</option>
                        </select>
                    </div>
                        <div class="col-lg-4">
                            <label>Precio</label>
                            <div class="input-group">
                                <input name="price" type="number" step="any" class="form-control" placeholder="150">
                                <span class="input-group-addon"><i class="fa fa-eur"></i></span>
                            </div>
                    </div>
                        <div class="col-lg-4">
                            <div class="form-group">
                                <label>Cantidad</label>
                                <input type="number" name="qtd" class="form-control" placeholder="1">
                            </div>
                        </div>
                    </div>
                        <div class="clearfix"></div>
                </div>
                <div class="row">
                    <div class="form-group">
                        <div class="col-lg-12">
                            <button type="submit" class="btn btn-labeled btn-green">
                                <span class="btn-label"><i class="fa fa-check"></i></span>Guardar
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<div class="col-lg-12">
    <div class="portlet portlet-default">
        <div class="portlet-heading">
            <div class="portlet-title">
                <h4>Detalles</h4>
            </div>
            <div class="portlet-widgets">
                <a data-toggle="collapse" data-parent="#accordion" href="#rooms"><i class="fa fa-chevron-down"></i></a>
            </div>
            <div class="clearfix"></div>
        </div>
        <div id="rooms" class="panel-collapse collapse">
            <div class="portlet-body">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Descripci칩n</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for condition in conditions %}
                            <tr>
                                <td>{{ condition.description }}</td>
                                <td>
                                    <a href="{{ site_url('rooms/delete_conditions/'~condition.id) }}" title="Eliminar">
                                        <button class="btn btn-red add-on" type="button"><i class="fa fa-trash-o"></i></button>
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}