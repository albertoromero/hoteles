{% extends _panel %}
{% block content %}
<div class="col-lg-12">
    <div class="portlet portlet-default">
        <div class="portlet-heading">
            <div class="portlet-title">
                <h4>{{ room.name }}</h4>
            </div>
            <div class="clearfix"></div>
        </div>
        <div class="portlet-body">
            <form accept-charset="UTF-8" role="form" method="post">
                <input type="hidden" name="hotels_id" value="{{ room.hotels_id }}">
                <div class="form-group">
                <label>Nombre</label>
                    <input name="name" type="text" class="form-control" placeholder="Nombre" value="{{ room.name }}">
                </div>
                <div class="form-group">
                    <label>Descripcion</label>
                    <textarea class="form-control" name="description" placeholder="Descripcion">{{ room.description }}</textarea>
                </div>
                <div class="row">
                    <div class="form-group">
                        <div class="clearfix"></div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group">
                        <div class="col-lg-12">
                            <button type="submit" class="btn btn-labeled btn-green">
                                <span class="btn-label"><i class="fa fa-check"></i></span>Guardar
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}